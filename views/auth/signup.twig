{% extends 'layout.twig' %} {% block content %}
<div class="section container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <div class="card login-wrapper">
        <div class="card-content">
          {% if signup_confirm %}
          <div id="AccountVerification">
            <h4 class="center-align">Account Verification</h4>
            <p>Your account has been successfully created. We have <b>sent you an email with a verification link</b>.
            <p>Please locate the email and activate your account by clicking on the link.</p>
            <p>If you are unable to find the email in your inbox, then please check your spam folder.</p>
          </div>
          {% else %}
          <form method="post" action="{{'auth/signup' | url}}" id="authSignupForm">
            <h4 class="center">Create Account</h4>

            <div class="input-field">
              <label for="Username">
                Username
              </label>
              <input name="username" id="Username" type="text">
            </div>

            <div class="input-field">
              <label for="Email">
                Email
              </label>
              <input name="email" id="Email" class="" value="" spellcheck="false" autocomplete="off" autocapitalize="off" type="email">
            </div>

            <div class="input-field">
              <label for="Password">
                Password
              </label>
              <input name="password" id="Password" class="" type="password">
            </div>

            <div class="input-field">
              <label for="ConfirmPassword">
                Confirm password
              </label>
              <input name="confirmpassword" id="ConfirmPassword" class="" type="password">
            </div>
            {% if errors %} {% include 'partials/errors.twig' %} {% endif %}
            <p>
              <input value="Create" class="btn-large" type="submit">
            </p>
          </form>
          {% endif %}

        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}