{% extends 'layout.twig' %}

{% block layout %}
<nav class="hide-on-large-only">
  <div class="nav-wrapper ">
    <a href="{{ '' | url }}" class="brand-logo left">Closet</a>

    <span class="hide-on-med-and-up">
      <span class="brand-logo right">Admin Panel</span>
      
    </span>
    <span class="hide-on-small-only ">
      <span class="brand-logo">Admin Panel</span>
    </span>
  </div>
</nav>

<nav class="hide-on-large-only">
  
  <div class="nav-wrapper red lighten-5">
    {% if title %}
    <span class="brand-logo black-text">{{ title }}</span>
    {% endif %}
    
    <a href="#" data-target="nav-admin" class="sidenav-trigger">
      <i class="material-icons black-text">menu</i>
    </a>
  </div>
  
</nav>

<ul id="nav-admin" class="sidenav">
  <li class="logo">
    <a id="logo-container" href="{{ '' | url }}" class="brand-logo">
      <h3 class="header">Closet</h3>
    </a>
  </li>
  <li>
    <a href="{{ 'admin/users' | url }}" class="waves-effect waves-teal">
      Users
    </a>
  </li>
  <li>
    <a href="{{ 'admin/products' | url }}" class="waves-effect waves-teal">
      Products
    </a>
  </li>
</ul>

<div class="hide-on-med-and-down">
  <div class="top-nav">
    <div class="nav-wrapper">
      <div class="row">
        <div class="col s12 m10 offset-m1">
          <h3 class="title">Admin Panel {% if title %}- {{ title }}{% endif %}</h3>
        </div>
      </div>
    </div>
  </div>
  <ul class="sidenav sidenav-fixed">
    <li class="logo">
      <a id="logo-container" href="{{ '' | url }}" class="brand-logo">
        <h3 class="header">Closet</h3>
      </a>
    </li>
    <li>
      <a href="{{ 'admin/users' | url }}" class="waves-effect waves-teal">
        Users
      </a>
    </li>
    <li>
      <a href="{{ 'admin/products' | url }}" class="waves-effect waves-teal">
        Products
      </a>
    </li>
  </ul>
</div>

<div class="content-admin section container">
  {{ block('content') }}
</div>


{% endblock %}